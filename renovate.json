{
 "extends": [
  ":npm",
  ":separateMajorReleases",
  ":combinePatchMinorReleases",
  ":ignoreUnstable",
  ":prImmediately",
  ":semanticCommitsDisabled",
  ":automergeDisabled",
  ":ignoreModulesAndTests",
  ":maintainLockFilesDisabled",
  ":disableVulnerabilityAlerts",
  "group:monorepos",
  "group:recommended",
  "helpers:disableTypesNodeMajor"
 ],
 "timezone": "Europe/London",
 "labels": [
  "dependencies"
 ],
 "branchPrefix": "renovate-",
 "rangeStrategy": "replace",
 "dependencyDashboard": true,
 "dependencyDashboardApproval": true,
 "prBodyNotes": [
  ":information_source: Find our documentation at https://github.com/Financial-Times/next/wiki/Renovate."
 ],
 "packageRules": [
  {
   "matchPackagePrefixes": [
    "@financial-times",
    "ft-next-",
    "ft-n-"
   ],
   "matchPackageNames": [
    "shellpromise",
    "fetchres",
    "isomorphic-fetch",
    "next-metrics",
    "n-health"
   ],
   "depTypeList": [
    "dependencies"
   ],
   "dependencyDashboardApproval": false
  },
  {
   "depTypeList": [
    "devDependencies"
   ],
   "dependencyDashboardApproval": true
  },
  {
   "matchDepTypes": [
    "volta"
   ],
   "enabled": false
  },
  {
   "packageNames": [
    "@financial-times/n-gage",
    "@financial-times/n-heroku-tools"
   ],
   "dependencyDashboardApproval": false,
   "groupName": "next build tools",
   "groupSlug": "next-build-tools"
  },
  {
   "matchPackagePrefixes": [
    "o-"
   ],
   "packageNames": [
    "@financial-times/n-profile-ui",
    "@financial-times/n-live-chat"
   ],
   "dependencyDashboardApproval": true
  },
  {
   "matchPackagePrefixes": [
    "@financial-times/x-"
   ],
   "groupName": "x-dash monorepo",
   "groupSlug": "x-dash"
  },
  {
   "matchPackagePrefixes": [
    "@financial-times/ads-"
   ],
   "groupName": "advertising monorepo",
   "groupSlug": "advertising"
  },
  {
   "matchPackagePrefixes": [
    "@financial-times/privacy-"
   ],
   "groupName": "privacy monorepo",
   "groupSlug": "privacy"
  },
  {
   "matchPackagePrefixes": [
    "@financial-times/dotcom-"
   ],
   "rangeStrategy": "auto",
   "dependencyDashboardApproval": false,
   "groupName": "page kit monorepo",
   "groupSlug": "page-kit"
  },
  {
   "matchPackageNames": [
    "dotcom-tool-kit"
   ],
   "matchPackagePrefixes": [
    "@dotcom-tool-kit/"
   ],
   "rangeStrategy": "auto",
   "dependencyDashboardApproval": false,
   "groupName": "Tool Kit monorepo",
   "groupSlug": "dotcom-tool-kit"
  },
  {
   "matchPackagePrefixes": [
    "@dotcom-reliability-kit/"
   ],
   "rangeStrategy": "auto",
   "dependencyDashboardApproval": false,
   "groupName": "Reliability Kit monorepo",
   "groupSlug": "dotcom-reliability-kit"
  },
  {
   "matchPackagePrefixes": [
    "@financial-times/cp-content-pipeline-"
   ],
   "rangeStrategy": "auto",
   "dependencyDashboardApproval": false,
   "groupName": "cp-content-pipeline monorepo",
   "groupSlug": "cp-content-pipeline"
  }
 ],
 "ignoreDeps": [
  "bower"
 ]
}